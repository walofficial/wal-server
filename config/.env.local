# =============================================================================
# LOCAL DEVELOPMENT ENVIRONMENT CONFIGURATION
# =============================================================================

# Environment Settings
ENV=local

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MongoDB (Docker)
MONGODB_DB_NAME=mnt-development
MONGO_INITDB_ROOT_USERNAME=root
MONGO_INITDB_ROOT_PASSWORD=root

MONGO_INITDB_DATABASE=${MONGODB_DB_NAME}
MONGODB_URI=mongodb://${MONGO_INITDB_ROOT_USERNAME}:${MONGO_INITDB_ROOT_PASSWORD}@mongo-db:27017/${MONGO_INITDB_DATABASE}?authSource=admin

# Redis (Docker)
REDIS_PORT=32582


# =============================================================================
# PUB/SUB TOPICS & SUBSCRIPTIONS (Local)
# =============================================================================

# Video Processing
PUB_SUB_TRANSCODER_TOPIC_ID=video-transcoder-dev
PUB_SUB_TRANSCODER_SUBSCRIPTION_ID=ment-video-verification-dev-sub

# Translation
PUB_SUB_TRANSLATION_TOPIC_ID=translation-local
PUB_SUB_TRANSLATION_SUBSCRIPTION_ID=translation-local-sub

# =============================================================================
# GOOGLE CLOUD TASKS (Local/Mock)
# =============================================================================

GCP_TASKS_VERIFICATION_QUEUE=ment-video-verification-local
GCP_TASKS_NOTIFICATION_QUEUEwal-notification-queue

# =============================================================================
# EXTERNAL API SERVICES
# =============================================================================

# AI/ML Services (Local)
JINA_BASE_URL="http://host.docker.internal:3000/v1"

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

LANGFUSE_TRACING_ENVIRONMENT=production
